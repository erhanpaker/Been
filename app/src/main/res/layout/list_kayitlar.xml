    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#eee"
            android:text="Deneme" />

        <LinearLayout
            android:id="@+id/layoutCizgi"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66FF6600"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/layoutEkler"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/asdasd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@android:drawable/btn_star_big_on" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/asdasd"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/textTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="23 Gün Geçti"
                android:textColor="#499FD1"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>